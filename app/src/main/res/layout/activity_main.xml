<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/tytul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:paddingTop="7dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Gra w kości. Autor: Jakub Majewski"
            android:textSize="23.5dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="#A52A2A"/>
        <Button
            android:id="@+id/rollDiceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="20dp"
            android:background="#D2691E"
            android:text="RZUĆ KOŚĆMI"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/dice1"
                android:layout_width="67dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="9dp"
                android:background="@color/white"
                android:text="?"
                android:textSize="45dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/dice2"
                android:layout_width="67dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="9dp"
                android:background="@color/white"
                android:text="?"
                android:textSize="45dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/dice3"
                android:layout_width="67dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="9dp"
                android:background="@color/white"
                android:text="?"
                android:textSize="45dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/dice4"
                android:layout_width="67dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="9dp"
                android:background="@color/white"
                android:text="?"
                android:textSize="45dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/dice5"
                android:layout_width="67dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:text="?"
                android:textSize="45dp"
                android:textAlignment="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/currentRollScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wynik tego losowania: "
            android:layout_margin="10dp" />
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wynik gry: "
            android:layout_margin="10dp" />
        <TextView
            android:id="@+id/rollCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liczba rzutów: "
            android:layout_margin="10dp" />
        <Button
            android:id="@+id/resetGameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESETUJ WYNIK"
            android:layout_margin="10dp"
            android:background="#D2691E"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>